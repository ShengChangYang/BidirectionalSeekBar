<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="40dp"
                        android:height="40dp"/>
                    <solid android:color="#40AA00AA"/>
                </shape>
            </item>
            <item
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp">
                <shape android:shape="oval">
                    <size
                        android:width="10dp"
                        android:height="10dp"/>
                    <solid android:color="#FFFF00FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item>
        <layer-list>
            <item
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp">
                <shape android:shape="oval">
                    <size
                        android:width="10dp"
                        android:height="10dp"/>
                    <solid android:color="#FFFF00FF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
